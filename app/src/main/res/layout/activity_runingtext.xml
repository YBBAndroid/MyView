<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <com.ybb.testview.View.RuningTextView.NumberRunningTextView
        android:id="@+id/numbertext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:frameNum="30"
        app:runWhenchange="true"
        app:textType="num"
        android:textColor="@color/colorSendName2"
        android:textSize="30sp"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp">
    </com.ybb.testview.View.RuningTextView.NumberRunningTextView>

    <com.ybb.testview.View.RuningTextView.NumberRunningTextView
        android:id="@+id/numbertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:frameNum="30"
        app:runWhenchange="true"
        app:textType="money"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:layout_marginRight="61dp"
        android:layout_marginEnd="61dp"
        android:layout_alignBaseline="@+id/numbertext2"
        android:layout_alignBottom="@+id/numbertext2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </com.ybb.testview.View.RuningTextView.NumberRunningTextView>

    <Button
        android:text="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:id="@+id/start"/>

</RelativeLayout>